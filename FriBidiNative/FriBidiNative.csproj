<Project Sdk="Microsoft.NET.Sdk">
    
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <Authors>Ellpeck</Authors>
        <Description>GNU FriBidi native libraries for Windows, Linux and Mac</Description>
        <PackageTags>dll native fribidi gnu bidi</PackageTags>
        <PackageProjectUrl>https://github.com/Ellpeck/FriBidiNative</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Ellpeck/FriBidiNative</RepositoryUrl>
        <PackageLicenseExpression>LGPL-2.1-only</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <VersionPrefix>1.0.10</VersionPrefix>
    </PropertyGroup>
    
    <ItemGroup>
        <Content Include="runtimes\**">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <PackagePath>runtimes</PackagePath>
        </Content>
        <None Include="_._" Pack="true" PackagePath="lib/netstandard2.0"/>
        <None Include="../README.md" Pack="true" PackagePath="" />
    </ItemGroup>
</Project>
